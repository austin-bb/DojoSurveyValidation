@model Survey

<form action="submit" method="POST" style="width: 50%;">
    <div class="form-group">
      <label asp-for="Name">Your Name: </label>
      <span asp-validation-for="Name" style="color: red;"></span>
      <input type="text" asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
      <label asp-for="Location">Your Location: </label>
      <select asp-for="Location" id="Location" class="form-control">
        <option value="San Francisco">San Francisco</option>
        <option value="San Jose">San Jose</option>
        <option value="Seattle">Seattle</option>
      </select>
    </div>
    <div class="form-group">
      <label asp-for="Language">Favorite Language: </label>
      <select asp-for="Language" id="Language" class="form-control">
        <option value="C#">C#</option>
        <option value="JavaScript">JavaScript</option>
        <option value="Pyhton">Pyhton</option>
      </select>
    </div>
    <div class="form-group">
      <label asp-for="Comment">Comment: </label>
      <span asp-validation-for="Comment" style="color: red;"></span>
      <textarea asp-for="Comment" id="" cols="30" rows="4" class="form-control"></textarea>
    </div>
    <button type="submit">Submit</button>
  </form>